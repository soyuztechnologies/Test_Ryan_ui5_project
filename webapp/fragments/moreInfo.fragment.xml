<core:FragmentDefinition 
xmlns:f="sap.ui.layout.form"
xmlns:core="sap.ui.core" xmlns="sap.m">
    <f:SimpleForm>
        <f:content>
            <Label text="Name"></Label>
            <Text text="{NAME}"></Text>
            <Label text="Category"></Label>
            <Text text="{CATEGORY}"></Text>
            <Label text="Price"></Label>
            <Text text="{PRICE} {CURRENCY_CODE}"></Text>
            <Label text="Supplier Name"></Label>
            <ObjectStatus text="{SUPPLIER_NAME}"></ObjectStatus>
            <core:Title text="Supplier Data (From association)"></core:Title>
            <Label text="Supplier Id"></Label>
            <Text text="{To_Supplier/BP_ID}"></Text>
            <Label text="Phone No"></Label>
            <Text text="{To_Supplier/PHONE_NUMBER}"></Text>
            <Label text="Address"></Label>
            <Text text="{To_Supplier/STREET} {To_Supplier/CITY} {To_Supplier/COUNTRY}"></Text>
        </f:content>
    </f:SimpleForm>
</core:FragmentDefinition>